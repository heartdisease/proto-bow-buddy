{
  "compilerOptions": {
    "sourceMap": true,
    "module": "amd",
    "target": "es5",
    "outDir": "./dist/",
    "removeComments": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "lib": ["es2015.core", "es2015.collection", "es2015.promise", "es5", "dom"],
    "types": ["jquery", "materialize-css"]
  },
  "include": ["./src/*.ts", "./src/*.d.ts", "./src/styles/*.scss"],
  "exclude": ["./node_modules", "./**/*.spec.ts"]
}
