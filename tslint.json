{
  "defaultSeverity": "error",
  "extends": [
    "angular-tslint-rules",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [],
  "jsRules": {
    "prettier": true,
    "linebreak-style": [true, "LF"],
    "quotemark": [true, "single", "backtick"],
    "no-console": [false, "log", "warning", "error"]
  },
  "rules": {
    "prettier": true,
    "linebreak-style": [true, "LF"],
    "quotemark": [true, "single", "backtick"],
    "comment-type": [true, "doc", "singleline", "multiline"],
    "array-type": [true, "array-simple"],
    "no-console": [false, "log", "warning", "error"],
    "only-arrow-functions": [true, "allow-named-functions"],
    "max-file-line-count": [true, 1000],
    "member-ordering": [false],
    "newline-before-return": [false],
    "no-null-keyword": [false],
    "no-non-null-assertion": [true],
    "no-conditional-assignment": [true],
    "ordered-imports": [false],
    "no-import-side-effect": [true, { "ignore-module": "(\\.html|\\.css)$" }],
    "prefer-function-over-method": [true, "allow-public", "allow-protected"],
    "object-literal-sort-keys": false,
    "prefer-conditional-expression": false,
    "no-floating-promises": {
      "options": [true],
      "severity": "warning"
    },
    "no-void-expression": {
      "options": [true],
      "severity": "warning"
    },
    "strict-boolean-expressions": {
      "options": [true],
      "severity": "warning"
    }
  }
}
